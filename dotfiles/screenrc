shell /usr/local/bin/bash
defscrollback 10000
startup_message off
backtick 101 0 1 /Users/xath/bin/git_branch.sh
backtick 102 0 1 /Users/xath/bin/aws_profile.sh
backtick 103 30 30 sh -c "echo \"gcloud: $(get_gcloud_project.sh)\""
hardstatus on
hardstatus alwayslastline
hardstatus string '%{.kW} %101` %= %102` %= %103` %= %S'
vbell off

# enable normal scrolling
termcapinfo xterm* ti@:te@

term "screen-256color"
# terminfo and termcap for nice 256 color terminal
# allow bold colors - necessary for some reason
attrcolor b ".I" 
# tell screen how to set colors. AB = background, AF=foreground 
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
# erase background with current bg color 
defbce "on" 

# clear screen on vim exit
altscreen on
